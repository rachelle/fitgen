<body>
<!-- navbar -->
<nav>
  <div class="nav-wrapper blue-grey lightnen-1">
    <a href="#" class="brand-logo logoname">Era</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><a class="prog-links" href="/users/<%= user.id %>">Home</a></li>
      <li><a href="/users">Search</a></li>
      <li><a href="/photos">Photos</a></li>
      <li><a class="navlinks" href="/logout">Signout</a></li>
    </ul>
  </div>
</nav>
<!-- photo show content -->
<div class="photo-background">
  <!-- Users gallery of progress photos -->
  <div class="user-container center-align">
    <div class="user-feed">
      <img class="activator" style="width:400px; height: 400px" src="<%= photo.image %>"> 
      <div class="caption-box">
        <h6><%= photo.caption %></h6>
      </div>
      <button class="edit-button"><a class="user-button" href="/photos/<%= photo._id %>/edit">Edit Photo</a></button>
    </div>
  </div>
</div>

<!-- comment form  -->
<div class="add-comment"> 
  <form method="post" action="/create"> 
    <input type="text" class="content-text" name="content"/>
    <span>Comment</span>
    <textarea name="comment"> </textarea> <input class="edit-button" type="submit" value="Save"> 
  </form>
</div>

<div class="comment"> 
<%= each comment in photo.comments %> 
<%= comment.content %> 
</div>
<% }); %> 
