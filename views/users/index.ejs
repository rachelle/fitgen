<!DOCTYPE html> 
<html lang="en"> 
<head> 
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <title>Era</title> 
  <!-- Materliaze CSS -->
  <link rel="stylesheet" type="text/css" href="css/search.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css">
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
  <!-- CSS -->
  <link rel="stylesheet" type="text/css" href="/css/landing.css">
  <!-- scripts -->
  <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  <script type="text/javascript" src="../js/register.js"></script>
</head> 
<body>
<!-- navbar -->
 <nav>
  <div class="nav-wrapper blue-grey lightnen-1">
    <a href="#" class="brand-logo logoname">Era</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><a href="/users/<%= user.id %>">Home</a></li>
      <li><a href="/users">Search</a></li>
      <li><a href="/photos">Photos</a></li>
      <li><a class="navlinks" href="/logout">Signout</a></li>
    </ul>
  </div>
</nav> 
<!-- all user show page  -->
<div class="content">
  <h3 class='index-text center-align'>Users</h3> 
  <ul class='feed'>
    <% users.forEach(function(user) { %>
      <li class="user-links">
        <div class="photo-wrapper">
          <div class="photo">
            <a href="/users/<%= user._id %>"><img class="bg" src="<%= user.avatar %>" alt=""></a>
            <a href="/users/<%= user._id %>"><%= user.name %></a>
          </div>
          <div class="text bottom">
            <ul class="collection with-header user-stats"> 
              <li class="collection-header"><h5>Stats</h5></li>
              <li class="collection-item"><%= user.weight %></li>
              <li class="collection-item"><%= user.height %></li> 
              <li class="collection-item"><%= user.status %></li>
            </ul>
          </div>
        </div>
      </li>
    <% }); %>
    <li class="user-links">
      <div class="photo-wrapper">
        <img class="bg" src="https://s-media-cache-ak0.pinimg.com/236x/ac/a6/02/aca602b53f3120db07b0e956bb2bcc75.jpg">
        <div class="text"></div>
        <div class="photo"></div>
        <div class="text bottom">Bottom Text</div>
      </div>
    </li>
  </ul>
</div>

<!-- footer content -->
<footer class="page-footer blue-grey darken-4">
  <div class="container">
    <div class="row">
      <div class="col l6 s12">
        <h5 class="white-text">FitGeneration</h5>
        <p class="grey-text text-lighten-4">Improve all aspects in your life</p>
      </div>
      <div class="col l4 offset-l2 s12">
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
      Era Â© 2014 Copyright Text
      <a class="grey-text text-lighten-4 right" href="#!"></a>
    </div>
  </div>
</footer>

</body>
</html>